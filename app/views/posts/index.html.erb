<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>作者</td>
        <td>标题</td>

        <td></td>

      </tr>
    </thead>
    <tbody>
      <%@posts.each do |post| %>
        <tr>
          <td><%= image_tag(post.owner.avatar_url(:normal), { title: post.owner.name }) if post.owner.avatar  %></td>
          <td><%= link_to(post.title, post_path(post)) %></td>
          <td><small><%= time_ago_in_words(post.updated_at)%></small></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @posts,:page_links => false,renderer: BootstrapPagination::Rails %>
</div>